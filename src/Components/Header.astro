<style>
  header {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    background: linear-gradient(90deg, #1a73e8, #4285f4, #2a9df4);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    z-index: 1000;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  li a {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease, transform 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    font-size: 1.1rem;
  }

  li a:hover {
    color: #ffcc00;
    transform: scale(1.1);
    background: rgba(255, 255, 255, 0.1);
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #fff;
    text-transform: uppercase;
  }

  /* Responsive */
  @media (max-width: 768px) {
    nav {
      flex-direction: column;
    }

    ul {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<header>
  <nav>
